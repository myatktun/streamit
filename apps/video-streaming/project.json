{
    "name": "video-streaming",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/video-streaming/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "dist/apps/video-streaming",
                "main": "apps/video-streaming/src/main.ts",
                "tsConfig": "apps/video-streaming/tsconfig.app.json",
                "assets": ["apps/video-streaming/src/assets"],
                "generatePackageJson": true
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false,
                    "fileReplacements": [
                        {
                            "replace": "apps/video-streaming/src/environments/environment.ts",
                            "with": "apps/video-streaming/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "nx build video-streaming",
                    "docker build -f ./apps/video-streaming/Dockerfile . -t $ECR_TAG:latest",
                    "docker push $ECR_TAG:latest"
                ],
                "parallel": false
            }
        },
        "compose:up": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "nx build video-streaming --configuration=production",
                    "docker compose up video-streaming --build -d"
                ],
                "parallel": false
            }
        },
        "compose:rm": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["docker compose rm -sfv video-streaming"],
                "parallel": false
            }
        },
        "serve": {
            "executor": "@nrwl/js:node",
            "options": {
                "buildTarget": "video-streaming:build"
            },
            "configurations": {
                "production": {
                    "buildTarget": "video-streaming:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/video-streaming/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/video-streaming/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
